<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTrainingExerciseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/t_training_title"
        android:textAlignment="center"
        android:textColor="@color/background"
        android:textSize="34sp"
        android:textStyle="bold"
        android:background="@drawable/fragment_header"
        android:padding="16dp" />

    <!-- ScrollView für den restlichen Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- RecyclerView für die Übungen -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTrainingdayExercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <!-- Plus-Button als quadratische Karte -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddTrainingExercise"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/primary">

                <ImageView
                    android:id="@+id/addNewTrainingExercise"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/t_add_exercise"
                    android:src="@drawable/ic_add"
                    app:tint="@android:color/white"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
