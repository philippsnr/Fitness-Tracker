<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Name des Trainingstags -->
        <TextView
            android:id="@+id/textViewTrainingdayName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/name_day"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:maxLines="1"/>

        <!-- Container für die Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Auge Icon (z.B. für Details ansehen) -->
            <ImageView
                android:id="@+id/ivViewDay"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/view_day"
                android:src="@drawable/ic_eye"
                app:tint="@android:color/white"
                android:layout_marginStart="8dp"/>

            <!-- Stift Icon (Bearbeiten) -->
            <ImageView
                android:id="@+id/ivEditDay"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/edit_day"
                android:src="@drawable/ic_edit"
                app:tint="@android:color/white"
                android:layout_marginStart="8dp"/>

            <!-- Mülleimer Icon (Löschen) -->
            <ImageView
                android:id="@+id/ivDeleteDay"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/delete_day"
                android:src="@drawable/ic_delete"
                app:tint="@android:color/white"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
